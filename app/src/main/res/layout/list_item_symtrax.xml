<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    >



    <TextView
        android:id="@+id/list_item_symptom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_small_margin"

        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintRight_toLeftOf="@+id/list_item_emotion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintHorizontal_weight="4"


        />


    <TextView
        android:id="@+id/list_item_emotion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintLeft_toRightOf="@+id/list_item_symptom"
        app:layout_constraintRight_toLeftOf="@+id/list_item_date"
        app:layout_constraintWidth_percent="0.33"
        app:layout_constraintHorizontal_weight="3.5"
        app:layout_constraintBaseline_toBaselineOf="@+id/list_item_symptom"


        />

    <TextView
        android:id="@+id/list_item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        app:layout_constraintTop_toTopOf="@+id/button1"
        app:layout_constraintLeft_toRightOf="@id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="2.5"
        app:layout_constraintBaseline_toBaselineOf="@+id/list_item_symptom"
        />



</android.support.constraint.ConstraintLayout>
